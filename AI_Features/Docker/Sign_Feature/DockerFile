# Use the official Raspberry Pi OS base image with Python 3.9
FROM python:3.9-bullseye

# Install system dependencies and build tools
RUN apt-get update && apt-get install -y \
    libatlas-base-dev \
    libhdf5-dev libhdf5-serial-dev \
    libjpeg-dev liblapack-dev libpng-dev \
    libtiff-dev libwebp-dev ffmpeg \
    build-essential gfortran cmake pkg-config \
    libopenblas-dev libraspberrypi-dev \
    # OpenCV GUI/backends
    python3-opencv libgtk-3-0 libgtk-3-dev libgl1-mesa-glx \
    # V4L2 support for Pi CSI camera
    v4l-utils libv4l-dev \
    libcamera-dev libcamera0 libboost-dev \
    libcamera-apps \
    # X11 client so cv2.imshow can connect to the host display
    x11-apps \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Upgrade pip to help fetch pre-built wheels if available
RUN pip install --upgrade pip setuptools wheel

# Install NumPy first to satisfy requirements
RUN pip install --no-cache-dir numpy==1.24.3

# Copy the requirements file
COPY requirements.txt /app/requirements.txt

# Install the dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY . /app

# Expose the port the app runs on
EXPOSE 6000

# Command to run the application
CMD ["python", "Sign_Publisher_1.3.py"]
