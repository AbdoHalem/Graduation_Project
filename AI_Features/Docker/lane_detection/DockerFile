# Use the official Raspberry Pi OS base image with Python 3.8
FROM python:3.9-slim

# Install system dependencies and build tools
RUN apt-get update && apt-get install -y \
    libatlas-base-dev \
    libhdf5-dev \
    libhdf5-serial-dev \
    libjpeg-dev \
    liblapack-dev \
    libpng-dev \
    libtiff-dev \
    libwebp-dev \
    ffmpeg \
    build-essential \
    gfortran \
    libopenblas-dev \
    pkg-config \
    cmake \
    && rm -rf /var/lib/apt/lists/*

# Set the working directory
WORKDIR /app

# Upgrade pip to help fetch pre-built wheels if available
RUN pip install --upgrade pip setuptools wheel

# Install NumPy first to satisfy SciPy build requirements
RUN pip install --no-cache-dir numpy

# Copy the requirements file
COPY requirements.txt /app/requirements.txt

# Install the dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the rest of the application code
COPY . /app

# Expose the port the app runs on
EXPOSE 5000

# Command to run the application
CMD ["python", "lane_detection_3.0.py"]